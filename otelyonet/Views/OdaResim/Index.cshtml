@model IEnumerable<otelyonet.Models.OdaResim>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OdaID)
            </th>
            <th>
                Resim
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResimYolu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Oda)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (OdaResim item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OdaID)
            </td>
            <td>
                <img src="@item.ResimYolu" width="50" height="50"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResimYolu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Oda.OdaAdı)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OdaResimID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OdaResimID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OdaResimID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
