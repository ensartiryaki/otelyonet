@model otelyonet.Models.OdaResim

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1>Create</h1>

<h4>OdaResim</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OdaID" class="control-label"></label>
                <select asp-for="OdaID" class ="form-control" asp-items="ViewBag.OdaID"></select>
            </div>
            <div class="form-group">
                <label asp-for="ResimDosyası" class="control-label"></label>
                <input asp-for="ResimDosyası" type="file" accept="image/*" class="form-control" />
                <span asp-validation-for="ResimDosyası" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

