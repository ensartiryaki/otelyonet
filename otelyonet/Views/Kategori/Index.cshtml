@model IEnumerable<otelyonet.Models.Kategori>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.KategoriAdı)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BabaKategori)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KategoriAdı)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BabaKategori.KategoriAdı)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.KategoriID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.KategoriID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.KategoriID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
