@model otelyonet.Models.Profil

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1>Create</h1>

<h4>Profil</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="KullanıcıID" class="control-label"></label>
                <input asp-for="KullanıcıID" value="1" readonly class="form-control" />
                <span asp-validation-for="KullanıcıID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adres" class="control-label"></label>
                <input asp-for="Adres" class="form-control" />
                <span asp-validation-for="Adres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CepNO" class="control-label"></label>
                <input asp-for="CepNO" class="form-control" />
                <span asp-validation-for="CepNO" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EvNO" class="control-label"></label>
                <input asp-for="EvNO" class="form-control" />
                <span asp-validation-for="EvNO" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="İşNO" class="control-label"></label>
                <input asp-for="İşNO" class="form-control" />
                <span asp-validation-for="İşNO" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Meslek" class="control-label"></label>
                <input asp-for="Meslek" class="form-control" />
                <span asp-validation-for="Meslek" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResimDosyası" class="control-label"></label>
                <input asp-for="ResimDosyası" type="file" class="form-control" accept="image/*"/>
                <span asp-validation-for="ResimDosyası" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
