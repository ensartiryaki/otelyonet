@model otelyonet.Models.Hizmet

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1>Create</h1>

<h4>Hizmet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HizmetAdı" class="control-label"></label>
                <input asp-for="HizmetAdı" class="form-control" />
                <span asp-validation-for="HizmetAdı" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Açıklama" class="control-label"></label>
                <input asp-for="Açıklama" class="form-control" />
                <span asp-validation-for="Açıklama" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label for="exampleInputFile">Resim</label>
                <div class="input-group">
                    <div class="custom-file">
                        <input id="ResimDosyası" asp-for="ResimDosyası" type="file" accept="image/*" class="custom-file-input" />
                        
                        <label class="custom-file-label" for="ResimDosyası">Dosya Seç</label>
                    </div>
                    <div class="input-group-append">
                        <span asp-validation-for="ResimDosyası" class="text-danger"></span>
                    </div>
                </div>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

