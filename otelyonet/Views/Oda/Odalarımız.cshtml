@model IEnumerable<Oda>
@{
    ViewData["Title"] = "Odalarımız";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<form asp-controller="Oda" asp-action="Odalarımız" method="post">
    <div class="row">
        <div class="form-group">

            <select name="seciliYatak" class="form-control">
                <option selected value="0">Yatak Sayısı Seçiniz !</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
            </select>
        </div>


        <div class="form-group">

            <select name="seciliKat" class="form-control" asp-items="ViewBag.KatListesi">
                <option selected value="1000">Kat Seçiniz</option>
            </select>
        </div>


        <div class="form-group">
            <input name="odaAdı" class="form-control" placeholder="Oda Adı"/>
        </div>

    </div>

    <div class="form-group">
        <input type="submit" value="GÖSTER" class="btn btn-primary" />
    </div>

</form>

<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.OdaID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OdaAdı)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KatNO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YatakSayısı)
            </th>
            <th>İŞLEMLER</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Oda oda in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => oda.OdaID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => oda.OdaAdı)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => oda.KatNO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => oda.YatakSayısı)
                </td>
                <td>

                    <div class="input-group-prepend">
                        <button type="button" class="btn btn-outline-info" data-toggle="dropdown">
                            <i class="fas fa-ellipsis-v"></i>
                        </button>
                        <ul class="dropdown-menu">
                            <li class="dropdown-item"> <a class="text-white" asp-action="Edit" asp-route-id="@oda.OdaID">Edit</a></li>
                            <li class="dropdown-item"><a class="text-white" asp-action="Details" asp-route-id="@oda.OdaID">Details</a></li>
                            <li class="dropdown-item"><a class="text-white" asp-action="Delete" asp-route-id="@oda.OdaID">Delete</a></li>
                            <li class="dropdown-item"><a class="text-white" asp-action="OdaÖzelliği" asp-route-id="@oda.OdaID">Oda Özellik</a></li>
                        </ul>
                    </div>
                    <!-- /btn-group -->


                </td>
            </tr>
        }
    </tbody>
</table>
