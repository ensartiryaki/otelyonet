@model otelyonet.Models.Müşteri

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1>Create</h1>

<h4>Müşteri</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
