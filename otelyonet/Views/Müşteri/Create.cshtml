                <label asp-for="MüşteriTamAdı" class="control-label"></label>
                <input asp-for="MüşteriTamAdı" class="form-control" />
                <span asp-validation-for="MüşteriTamAdı" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MüşteriSoyadi" class="control-label"></label>
                <input asp-for="MüşteriSoyadi" class="form-control" />
